<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%thread] %date %-5level %logger{10}:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.data" level="DEBUG"/>
    <logger name="org.springframework.ws.client.core" level="INFO"/>
    <logger name="org.springframework.ws" level="INFO"/>
    <logger name="ch.unil.spring.data.fedora" level="DEBUG"/>

    <root level="ERROR">
        <appender-ref ref="console"/>
    </root>
</configuration>